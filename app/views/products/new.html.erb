<h1>Nuevo producto</h1>

<div>
	<%= form_for @product do |f| %>
  	<p>
   	 	<%= f.label :name %><br>
    	<%= f.text_field :name %>
  	</p>
 	
 	<p>
 		<%= f.label :stock %> <br>
 		<%= f.text_field :stock %>
 	</p>

	<p>
		<%= f.label :photo %> <br>
		<%= f.text_field :photo %>
	</p>

	<p>
		<%= f.label :price %> <br>
		<%= f.text_field :price %>
	</p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>


